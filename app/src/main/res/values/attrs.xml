<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="indicator">
        <attr name="selected_color" format="color" />
        <attr name="unselected_color" format="color" />
        <attr name="distance_from_two_indicator" format="dimension" />
        <attr name="radius" format="dimension" />
    </declare-styleable>

    <attr name="indicatorDefStyleAttr" format="reference" />

    <declare-styleable name="MagicRecyclerView">
        <attr name="header_layout" format="reference" />
        <attr name="parallaxMultiplier" format="float" />
        <attr name="footer_layout" format="reference" />
    </declare-styleable>

    <declare-styleable name="SlopRefreshLayout">
        <attr name="slopValue" format="integer" />
    </declare-styleable>

    <declare-styleable name="FoldableTextView">
        <!--展开收缩动画的持续时间-->
        <attr name="animDuration" format="integer" />
        <!--正文颜色-->
        <attr name="textColor" format="color" />
        <!--正文文字大小-->
        <attr name="textSize" format="dimension" />
        <!--展开状态文字颜色-->
        <attr name="flagColor" format="dimension" />
        <!--展开状态文字大小-->
        <attr name="flagSize" format="dimension" />
        <!--展开状态图片资源-->
        <attr name="toggleSrcOpen" format="reference" />
        <!--折叠状态图片资源-->
        <attr name="toggleSrcClose" format="reference" />
        <!--折叠时显示的最大行数-->
        <attr name="minLines" format="integer" />
        <!--折叠标示的显示位置，只有中和右两种选择-->
        <attr name="flagGravity" format="enum">
            <enum name="center" value="0" />
            <enum name="end" value="1" />
        </attr>
    </declare-styleable>

    <style name="BadgeText" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">@dimen/badge_text_size</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">@dimen/badge_top_margin</item>
        <item name="android:paddingRight">@dimen/badge_width_padding</item>
        <item name="android:paddingLeft">@dimen/badge_width_padding</item>
        <item name="android:paddingBottom">@dimen/badge_height_padding</item>
        <item name="android:paddingTop">@dimen/badge_height_padding</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="DefaultIndicatorTheme">
        <item name="selected_color">#ffffff</item>
        <item name="unselected_color">#ffffff</item>
        <item name="distance_from_two_indicator">10dp</item>
        <item name="radius">10dp</item>
    </style>
</resources>